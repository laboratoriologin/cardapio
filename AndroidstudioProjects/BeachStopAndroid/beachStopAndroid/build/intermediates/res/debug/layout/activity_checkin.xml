<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_system"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <com.login.beachstop.android.view.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imagem_action_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_view_action_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/branco"
                android:textSize="20sp" />
        </LinearLayout>
    </com.login.beachstop.android.view.ActionBar>

    <TextView
        android:id="@+id/activity_checkin_text_view_boas_vindas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="false"
        android:text="Bem-vindo ao Beach Stop Ipitanga!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_checkin_text_view_lbl_mesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="false"
        android:text="Sua mesa:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/activity_checkin_text_view_mesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="false"
        android:textColor="#0B405F"
        android:textSize="75sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/activity_checkin_progres_bar"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/activity_checkin_text_view_lbl_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="false"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/activity_checkin_text_view_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/bt_ler_qr_code"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:padding="10dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/activity_checkin_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/bt_compartilhe_mesa"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:padding="10dp"
        android:visibility="gone" />

</LinearLayout><!-- From: file:/C:/Login/PROJETO/CardapioGIT/AndroidstudioProjects/BeachStopAndroid/beachStopAndroid/src/main/res/layout/activity_checkin.xml -->