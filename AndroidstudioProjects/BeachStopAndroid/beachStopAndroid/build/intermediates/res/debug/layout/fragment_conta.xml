<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_system"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/fragment_conta_list_view_item_conta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_conta_linear_layout_valor"
        android:shrinkColumns="0"
        android:stretchColumns="0"
        android:visibility="gone"></TableLayout>

    <TextView
        android:id="@+id/fragment_conta_text_view_sem_conta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_conta_linear_layout_valor"
        android:layout_margin="5dp"
        android:choiceMode="none"
        android:gravity="center"
        android:text="Conta vazia, sugestão?\n Peça uma entrada!"
        android:textAlignment="center"
        android:textColor="#654F3832"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/fragment_conta_linear_layout_valor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/fragment_conta_button_enviar_conta"
        android:background="#C19E97"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/fragment_conta_checkbox_gorjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="+ 10%"
            android:textColor="#4F3832" />

        <TextView
            android:id="@+id/fragment_conta_text_view_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_fragment_conta_valor_total"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="R$0,00"
            android:textColor="@color/branco"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fragment_conta_text_view_lbl_parcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/fragment_conta_text_view_valor"
            android:gravity="center_vertical"
            android:text="Parcial:"
            android:textColor="#4F3832"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/fragment_conta_button_enviar_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#2175B1"
        android:drawableLeft="@drawable/icone_conta"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:text="@string/enviar_conta"
        android:textColor="#0B405F"
        android:textSize="15dp" />

</RelativeLayout><!-- From: file:/C:/Login/PROJETO/CardapioGIT/AndroidstudioProjects/BeachStopAndroid/beachStopAndroid/src/main/res/layout/fragment_conta.xml -->