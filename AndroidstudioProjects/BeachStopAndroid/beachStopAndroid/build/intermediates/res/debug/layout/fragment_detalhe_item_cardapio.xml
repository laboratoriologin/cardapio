            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:background="@android:color/white">

            <ImageView
                android:id="@+id/fragment_detalhe_item_cardapio_image_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fragment_detalhe_item_cardapio_text_view_lbl_sobre_prato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="false"
                    android:text="@string/sobre_o_prato"
                    android:textColor="#900B405F"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragment_detalhe_item_cardapio_text_view_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:singleLine="false"
                    android:textColor="#75000000"
                    android:textSize="14sp" />

                <TableLayout
                    android:id="@+id/fragment_detalhe_item_cardapio_table_layout_sub_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item"
                    android:stretchColumns="0,1" >
                </TableLayout>
