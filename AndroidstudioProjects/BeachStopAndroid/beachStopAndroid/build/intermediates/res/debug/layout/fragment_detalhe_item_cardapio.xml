            <TextView
                android:id="@+id/fragment_detalhe_item_cardapio_text_view_lbl_ingredientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="false"
                android:text="@string/ingredientes"
                android:textColor="#900B405F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_detalhe_item_cardapio_text_view_ingredientes"
