<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:orientation="vertical" >

    <com.login.beachstop.android.view.ActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/fragment_detalhe_item_cardapio_button_compartilhar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/icone_compartilhar"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_view_action_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:text="Pastel"
                android:textColor="@color/branco"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.login.beachstop.android.view.ActionBar>

    <ImageView
        android:id="@+id/fragment_detalhe_item_cardapio_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <ScrollView
        android:id="@+id/fragment_detalhe_item_cardapio_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_detalhe_item_cardapio_text_view_lbl_sobre_prato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:text="@string/sobre_o_prato"
                android:textColor="#900B405F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_detalhe_item_cardapio_text_view_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:singleLine="false"
                android:textColor="#75000000"
                android:textSize="10sp" />

            <TableLayout
                android:id="@+id/fragment_detalhe_item_cardapio_table_layout_sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item"
                android:stretchColumns="0,1" >
            </TableLayout>
