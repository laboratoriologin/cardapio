<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_fragment_pedido_item_adapeter_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tab_fragment_pedido_item_adapeter_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item_cell"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tab_fragment_pedido_item_adapeter_image_view_seta_esquerda"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seta_para_esquerda" />

        <TextView
            android:id="@+id/tab_fragment_pedido_item_adapeter_text_view_qtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10" />

        <ImageView
            android:id="@+id/tab_fragment_pedido_item_adapeter_seta_direita"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seta_para_direita" />
    </LinearLayout>

    <TextView
        android:id="@+id/tab_fragment_pedido_item_adapeter_text_view_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tab_fragment_pedido_item_adapeter_linear_layout"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tab_fragment_pedido_item_adapeter_text_view_menos"
        android:layout_toRightOf="@+id/tab_fragment_pedido_item_adapeter_linear_layout"
        android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item_cell"
        android:gravity="center"
        android:text="Frango Especial - 2 pessoas" />

    <TextView
        android:id="@+id/tab_fragment_pedido_item_adapeter_text_view_menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tab_fragment_pedido_item_adapeter_linear_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item_cell"
        android:gravity="center"
        android:text="   -   "
        android:textStyle="bold" />

