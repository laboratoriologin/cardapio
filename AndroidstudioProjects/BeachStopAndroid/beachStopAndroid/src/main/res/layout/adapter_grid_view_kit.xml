<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_grid_view_kit_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/branco"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_grid_view_kit_image_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/adapter_grid_view_kit_image_view"
        android:layout_alignRight="@+id/adapter_grid_view_kit_image_view"
        android:layout_below="@id/adapter_grid_view_kit_image_view"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/adapter_grid_view_kit_text_view_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/marrom_claro"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adapter_grid_view_kit_text_view_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/marrom_claro"
            android:textSize="10sp" />

    </LinearLayout>

</RelativeLayout>