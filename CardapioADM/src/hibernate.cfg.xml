<?xml version='1.0' encoding='ISO-8859-1'?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="current_session_context_class">thread</property>

		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="hibernate.connection.datasource">java:/comp/env/jdbc/bdCardapio</property>
		<property name="hibernate.query.substitutions">true 1, false 0</property>

		<property name="hibernate.show_sql">true</property>

		<mapping class="com.login.cardapio.model.Menu" />

		<mapping class="com.login.cardapio.model.Usuario" />
		<mapping class="com.login.cardapio.model.Permissao" />
		<mapping class="com.login.cardapio.model.CategoriaCardapio" />
		<mapping class="com.login.cardapio.model.EmpresaCategoriaCardapio" />
		<mapping class="com.login.cardapio.model.Empresa" />
		<mapping class="com.login.cardapio.model.TipoPublicidade" />
		<mapping class="com.login.cardapio.model.Publicidade" />
		<mapping class="com.login.cardapio.model.Item" />
		<mapping class="com.login.cardapio.model.TipoAgenda" />
		<mapping class="com.login.cardapio.model.Agenda" />
		<mapping class="com.login.cardapio.model.SubItem" />
		<mapping class="com.login.cardapio.model.TiposQuantidade" />
		<mapping class="com.login.cardapio.model.TipoFuncionario" />
		<mapping class="com.login.cardapio.model.Funcionario" />
		<mapping class="com.login.cardapio.model.Metrica" />
		<mapping class="com.login.cardapio.model.TipoAlerta" />
		
	</session-factory>

</hibernate-configuration>
	
	