<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linha_sub_item_table_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/linha_sub_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item_cell"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/linha_sub_item_image_view_seta_esquerda"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seta_para_esquerda" />

        <TextView
            android:id="@+id/linha_sub_item_text_view_qtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/linha_sub_item_image_view_seta_direita"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/seta_para_direita" />
    </LinearLayout>

    <TextView
        android:id="@+id/linha_sub_item_text_view_descricao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item_cell"
        android:gravity="center" />

    <TextView
        android:id="@+id/linha_sub_item_text_view_valor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fragment_detalhe_item_cardapio_table_layout_sub_item_cell"
        android:gravity="center"/>

</TableRow>